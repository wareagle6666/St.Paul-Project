
@{
    ViewBag.Title = "Hymns";
}
<!--Page Header Start-->
<section class="page-header">
    <div class="page-header__bg" style="background-color:aquamarine;"></div>
    <!-- /.page-header__bg -->
    <div class="container">
        <h2>Hymns</h2>
        <ul class="thm-breadcrumb list-unstyled">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="color-thm-gray">/</li>
            <li><span>Hymns</span></li>
        </ul>
    </div>
</section>
<!--Page Header End-->
<!--Events Details Start-->
<section class="events-page">
    <div class="container">

        <!--News Page Start-->

        <div class="row">


            @if (Model != null)
            {
                if (Model.Count != 0)
                {

                    foreach (var item in Model)
                    {

                        <div class="col-xl-4 col-lg-6 col-md-6">
                            <div class="events-one__single">
                                <div class="events-one__imgHymns">

                                    <img src="/Content/Images/events-page-img-5.jpg" alt="">

                                    <div class="events-one__date-box">
                                        <p>@item.CreateDate.ToString("dddd, dd MMMM yyyy")</p>
                                    </div>
                                    <div class="events-one__bottomHymns">
                                        <h2>@item.DisplayTitle</h2>

                                        <h3 class="events-one__bottom-title">
                                            <audio controls>
                                                <source src="/Hymns/Audio/@item.Id" type="audio/mp3" />
                                            </audio>

                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <div class="deacons" colspan="3"> Files Found</div>
                }

            }
            else
            {
                <div class="deacons" colspan="3"> No Files Found</div>
            }


        </div>


    </div>
</section>

<!--Events Details Start-->
