
@{
    ViewBag.Title = "Index";
}

<div class="pagesetup">
    <h1 class="pageheaders">Church Liturgy Schedule Registration</h1>
    <p>
        test  @User.IsInRole("Priest")
    </p>

    <table class="table">
        <tr>
            <th>
                Event Name
            </th>
            <th>
                Date & Time
            </th>
            <th>
                Total Spots
            </th>
            <th>
                Spots Reserved
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.eventName
                </td>
                <td>
                    @item.eventDate.ToString("dddd, dd MMMM hh:mm tt")

                </td>
                <td>
                    @item.eventCount
                </td>
                <td>
                    @item.eventRSVP
                </td>
                <td>

                    @Html.ActionLink("CheckIn Guests", "Edit", new { eventID = item.eventID })

                </td>
            </tr>
        }

    </table>

</div>


