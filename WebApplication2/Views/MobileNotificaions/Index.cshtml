
@{
    ViewBag.Title = "Booking Form";
}

<!--Page Header Start-->
<section class="page-header">
    <div class="page-header__bg" style="background-color:aquamarine;"></div>
    <!-- /.page-header__bg -->
    <div class="container">
        <h2>Booking Form</h2>
        <ul class="thm-breadcrumb list-unstyled">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="color-thm-gray">/</li>
            <li><span>Booking Form</span></li>
        </ul>
    </div>
</section>
<!--Page Header End-->
<!--Events Details Start-->
<section class="event-details">
    <div class="container">

        @using (Html.BeginForm("Create", "MobileNotificaions", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "validateForm(event)" }))
        {
            <section class="contact-form-area">


                <div class="row justify-content-center">
                    <div class="col-lg-12">

                        <h3>Notificaions Center </h3>

                        <form id="contact-form" action="~/Van/Create" method="post">
                            <div class="conact-form-item">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-box mt-20">
                                            <input type="text" placeholder="Title" name="title" id="title">
                                        </div>
                                    </div>

                                </div>
                                <br />
                                <div class="row">

                                    <div class="col-lg-12">
                                        <div class="input-box mt-20">
                                            <textarea cols="30" rows="10" placeholder="Write Message" name="message" id="message"></textarea>
                                        </div>
                                        <div class="input-box mt-20 text-center">
                                            <button class="siteButtons" type="submit">Send</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </section>
        }


    </div>
</section>
<!--Events Details End-->
<script>




    function validateForm(event) {

        event = event || window.event || event.srcElement;



        if (event.target.length > 0) {
            if (event.target[0].value == "" || event.target[0].value == undefined) {
                alert('Please fill the Title in');

                event.preventDefault();
                return false;
            }

        }
        else {
            $('#MonoErrorMessage').hide();
        }
    }

</script>


